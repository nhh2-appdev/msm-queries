<!DOCTYPE html>
  <html>

    <head>

    </head>

    <body>
      <nav>
        <a href="/">
          Home
        </a>
      </nav>

      <h1>
        Director #<%= @an_id %> Details
      </h1>

      <nav>
        <a href="/directors">
          Go back
        </a>
      </nav>

    <hr>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_director.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_director.dob %>
      </dd>
        
      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_director.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src = <img src = <%= @the_director.image %>>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= @the_director.created_at %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= @the_director.updated_at %>
      </dd>

    <hr>

      <dt>
        Movie List
      </dt>

      <table border = "1">

         <tr>
          <th>
            ID
          </th>

          <th>
            Image
          </th>

          <th>
            Title
          </th>

          <th>
            Year
          </th>

          <th>
            Director
          </th>

          <th>
          </th>
        </tr>

        <% @directed_movies.each do |a_thing| %>
          <tr>
            <td> <%= a_thing.id %> </td>
            <td> 
              <img src = <%= a_thing.image %>>
            </td>
            <td> <%= a_thing.title %> </td>
            <td> <%= a_thing.year %> </td>
            <td> <%= @the_director.name %> </td>
            <td>
              <a href="movies/<%= a_thing.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>

      </table>
    </body>
